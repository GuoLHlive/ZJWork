<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>


    <!-- 界面的item属性textView  -->
    <style name="MainItemTextStyle">
        <item name="android:textSize">18px</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <!--  payActivity 文字模板-->
    <style name="PayStringTextStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">30px</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">20px</item>
        <item name="android:layout_marginTop">5px</item>
    </style>
    <!--  按钮模板 BseActivity-->
    <style name="ButtonStyle">
        <item name="android:layout_width">0px</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">18px</item>
    </style>

    <!-- 设置界面模板-->
    <style name="AdminTitleTextStyle">
        <item name="android:layout_width">0px</item>
        <item name="android:layout_weight">2</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:textSize">25px</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:paddingLeft">10px</item>
        <item name="android:background">@drawable/layout_admin_blue</item>
    </style>
    <style name="AdminTextStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">0px</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">18px</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="AdminButtonStyle">
        <item name="android:layout_width">0px</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">23px</item>
         <item name="android:background">@drawable/layout_admin_but_frame</item>
    </style>



    <!--设置界面属性 -->
    <style name="SettingKeyNameStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">#000000</item>
        <item name="android:textSize">22px</item>
        <item name="android:layout_margin">2px</item>
    </style>

    <style name="SettingKeyContentStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">35px</item>
        <item name="android:textColor">#444444</item>
        <item name="android:textSize">18px</item>
        <item name="android:padding">2px</item>
        <item name="android:layout_margin">2px</item>
    </style>

    <!--按钮的style -->

    <style name="Dialog_buttion_style">
        <item name="android:layout_width">0px</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_marginTop">10px</item>
        <item name="android:layout_marginBottom">10px</item>
        <item name="android:layout_marginLeft">10px</item>
        <item name="android:layout_marginRight">10px</item>
        <item name="android:textColor">@color/white</item>
    </style>


    <style name="ReadyPay_Dialog_TextStyle">
        <item name="android:gravity">center</item>
        <item name="android:layout_width">0px</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_weight">1</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">20sp</item>
        <item name="android:layout_marginTop">15px</item>
        <item name="android:layout_marginBottom">15px</item>
        <item name="android:layout_marginLeft">10px</item>
        <item name="android:layout_marginRight">10px</item>

    </style>

    <style name="Dialog_buttion_style2">
        <item name="android:layout_width">0px</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_marginTop">5px</item>
        <item name="android:layout_marginBottom">5px</item>
        <item name="android:layout_marginLeft">10px</item>
        <item name="android:layout_marginRight">10px</item>
        <item name="android:textColor">@color/white</item>
    </style>

</resources>
