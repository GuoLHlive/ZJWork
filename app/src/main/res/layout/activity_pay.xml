<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    >

    <data>


    </data>

<LinearLayout
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50px"
        android:background="#1570B5"
        android:orientation="horizontal"
        >
        <ImageView
            android:id="@+id/pay_back"
            android:layout_width="0px"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:src="@drawable/back"
            android:layout_gravity="center"
            android:scaleType="center"
            />
        <TextView
            android:id="@+id/pay_title"
            android:layout_width="0px"
            android:layout_weight="4"
            android:layout_height="40px"
            android:textColor="@color/white"
            android:textSize="25px"
            android:paddingLeft="5px"
            android:layout_gravity="center_vertical"
            android:gravity="center_vertical"
            android:lines="1"
            />
    </LinearLayout>
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="50px"
            >
            <TextView
                android:id="@+id/pay_txt_car"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="20px"
                android:textColor="@color/black"
                android:layout_gravity="center"
                android:layout_centerVertical="true"
                />

            <TextView
                android:id="@+id/pay_license_plate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="20px"
                android:textColor="@color/black"
                android:layout_marginLeft="5px"
                android:layout_toRightOf="@+id/pay_txt_car"
                android:layout_centerVertical="true"
                android:layout_gravity="center"
                />
            <Button
                android:id="@+id/pay_bnt_carInfo"
                android:layout_width="wrap_content"
                android:layout_height="50px"
                android:text="@string/pay_bnt_carNumber"
                android:textSize="20px"
                android:layout_alignParentRight="true"

                />
        </RelativeLayout>
        <TextView
            android:id="@+id/pay_stop_number"
            style="@style/PayStringTextStyle" />

        <TextView
            android:id="@+id/pay_long_time"
            style="@style/PayStringTextStyle"
            />

        <TextView
            android:id="@+id/pay_come_time"
            style="@style/PayStringTextStyle"
            />

        <TextView
            android:id="@+id/pay_stop_money"
            style="@style/PayStringTextStyle" />

        <TextView
            android:id="@+id/pay_owe_money"
            style="@style/PayStringTextStyle" />

        <TextView
            android:id="@+id/pay_money"
            style="@style/PayStringTextStyle" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50px"
            android:orientation="horizontal"
            android:layout_marginTop="10px"
            >
            <Button
                android:id="@+id/pay_bnt_one"
                style="@style/ButtonStyle"
                />
            <Button
                android:id="@+id/pay_bnt_two"
                style="@style/ButtonStyle"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50px"
            android:orientation="horizontal"
            android:layout_marginTop="10px"
            >
            <Button
                android:id="@+id/pay_bnt_three"
                style="@style/ButtonStyle"
                />
            <Button
                android:id="@+id/pay_bnt_four"
                style="@style/ButtonStyle"
                />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>



</layout>